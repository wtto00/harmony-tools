{
  "name": "harmony-tools",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "format": "prettier . --write --ignore-unknown --ignore-path src-tauri/.gitignore",
    "lint": "eslint --flag unstable_ts_config --cache --fix --color .",
    "prepare": "husky && echo npx lint-staged > .husky/pre-commit",
    "tscheck": "vue-tsc --noEmit --pretty -p ./tsconfig.json"
  },
  "dependencies": {
    "@tauri-apps/api": "2.0.0-rc.4",
    "@tauri-apps/plugin-dialog": "2.0.0-rc.1",
    "@tauri-apps/plugin-process": "2.0.0-rc.1",
    "@tauri-apps/plugin-shell": "2.0.0-rc.1",
    "@tauri-apps/plugin-updater": "2.0.0-rc.2",
    "flowbite": "^2.5.1",
    "vue": "^3.5.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@tauri-apps/cli": "2.0.0-rc.15",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "@vitejs/plugin-vue": "^5.1.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.10.0",
    "eslint-plugin-vue": "^9.28.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "jiti": "^1.21.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0",
    "vite": "^5.4.5",
    "vue-tsc": "^2.1.6"
  }
}
